<!DOCTYPE html>
<html>
  <head>
    <title>Farcebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="has-background-light">

    <% if controller_name != 'sessions' && controller_name != 'registrations' && controller_name != 'static' %>
      <nav class="navbar columns m-1" role="navigation" aria-label="main navigation">
        <div class="navbar-brand column is-2">
          <a class="navbar-item" href="https://bulma.io">
            <%= image_tag("full_brand.png", :alt => "brand logo") %>
          </a>

          <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

        <div id="navbarBasicExample column is-10" class="navbar-menu">
          <div class="navbar-start">
            <a class="navbar-item">
              Home
            </a>

            <a class="navbar-item">
              Documentation
            </a>

            <div class="navbar-item has-dropdown is-hoverable">
              <a class="navbar-link">
                More
              </a>

              <div class="navbar-dropdown">
                <a class="navbar-item">
                  About
                </a>
                <a class="navbar-item">
                  Jobs
                </a>
                <a class="navbar-item">
                  Contact
                </a>
                <hr class="navbar-divider">
                <a class="navbar-item">
                  Report an issue
                </a>
              </div>
            </div>
          </div>

          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <a class="button is-primary">
                  <strong>Sign up</strong>
                </a>
                <a class="button is-light">
                  Log in
                </a>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "button is-info" %>
              </div>
            </div>
          </div>
        </div>
      </nav>
    <% end %>
    
    
    <% if flash[:notice] %>
      <div class="notification is-primary is-light" style="border-radius: 0; margin-bottom: 0;">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger is-light" style="border-radius: 0; margin-bottom: 0;">
        <p class="subtitle alert"><%= alert %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
