<div class="column is-8">
  <h1 class="title">Friends</h1>
  <% @user.friends.each_slice(2) do |friend_a, friend_b| %>
  <div class="columns is-6">
    <div class="column">
      <article class="media box columns is-vcentered mt-2">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png" class="is-rounded">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <strong><%= link_to friend_a.name, user_path(friend_a) %></strong>
            </p>
            <% if current_user == @user %>
              <p>
                <%= link_to "Unfriend", delete_friendships_path(name: friend_a.name), controller: "friendships", action: "delete", method: :delete, class: "button is-small is-link" %>
              </p>
            <% end %>
          </div>
        </div>
      </article>
    </div>
    <div class="column">
      <% unless friend_b.nil? %>
        <article class="media box columns is-vcentered mt-2">
          <div class="media-left">
            <figure class="image is-64x64">
              <img src="https://bulma.io/images/placeholders/64x64.png" class="is-rounded">
            </figure>
          </div>
          <div class="media-content">
            <div class="content">
              <p>
                <strong><%= link_to friend_b.name, user_path(friend_b) %></strong>
              </p>
              <% if current_user == @user %>
                <p>
                  <%= link_to "Unfriend", delete_friendships_path(name: friend_b.name), class: "button is-small is-link" %>
                </p>
              <% end %>
            </div>
          </div>
        </article>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
