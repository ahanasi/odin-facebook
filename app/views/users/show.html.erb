<%= @user.name %>
<%= @user.email %>

<h1>Pending Friends</h1>
<br>
<table>
<% @user.pending_friends.each do |pending_friend| %>
<tr>
    <td><%= link_to pending_friend.name, user_path(pending_friend) %></td>
    <td><%= link_to "Cancel request", { :controller => "friendship", :action => "cancel", :id => pending_friend.name } %></td>
</tr>
<% end %>
</table>
<br>
<br>

<h1>Requested Friends</h1>
<br>
<table>
<% @user.requested_friends.each do |requester| %>
<tr>
    <td><%= link_to requester.name, user_path(requester) %></td>
    <td><%= link_to "Accept",:controller => "friendship", :action => "accept", method: :post, :id => requester.name %> / <%= link_to "Decline", { :controller => "friendship", :action => "decline", method: :post, :id => requester.name } %>
</tr>
<% end %>
</table>

<br>
<br>

<h1>Accepted Friends</h1>
<table>
<% @user.friends.each do |friend| %>
<tr>
    <td><%= link_to friend.name, user_path(friend) %></td>
</tr>
<% end %>
</table>