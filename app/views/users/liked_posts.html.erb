<div class="column is-6">
   <% if !@posts.empty? %>
    <%= render "shared/all_posts" %>
   <% else %>
    <% if @user == current_user %>
      <h2 class="subtitle has-text-centered p-5">You have not liked any posts.</h2>
    <% else %>
      <h2 class="subtitle has-text-centered p-5">This user has not liked any posts yet.</h2>
    <% end %>
   <% end %> 
</div>