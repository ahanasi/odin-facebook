<div class="column is-6 is-offset-3">

  <article class="media box">
    <figure class="media-left">
      <div class="columns is-centered is-mobile is-vcentered">
        <div class="column has-text-centered">
          <div class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/64x64.png" class="is-rounded">
          </div> 
        </div>
      </div>
    </figure>
    <div class="media-content">
        <div class="content">
          <%#= link_to 'New Post', new_post_path, remote: true, class: "button is-link", id: "new-post" %>
          <a href="/posts/new" data-no-turbolinks='true' id="new-post"  data-remote="true">
              <input type="text" readonly class="input" placeholder="Create Post">
          </a>
        </div>
        <%= render "post_modal" %>
    </div>
  </article>
</div>

