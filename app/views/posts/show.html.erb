<div class="column is-6">
  <div class="box">
    <article class="media">
        <div class="media-left">
            <figure class="image is-48x48">
                <img src="https://bulma.io/images/placeholders/64x64.png" class="is-rounded">
            </figure>
        </div>
        <div class="media-content">
        <div class="content">
            <strong><%= @post.user.name %></strong>
            <br />
            <small class="is-size-7"><%= @post.display_datetime() %></small>
        </div>
        </div>
        <% if @post.user == current_user %>
        <div class="media-right">
            <div class="dropdown is-up">
            <div class="dropdown-trigger">
                <button class="button dropdown-button" aria-haspopup="true" aria-controls="dropdown-menu7">
                <span class="icon is-small">
                    <i class="fas fa-ellipsis-h"></i>
                </span>
                </button>
            </div>
            <div class="dropdown-menu" id="dropdown-menu7" role="menu">
                <div class="dropdown-content">
                <%= link_to edit_post_path(@post), data: { turbolinks: false }, class: "dropdown-item dropdown-button" do %>
                <span class="icon"><i class="fas fa-pen" aria-hidden="true"></i></span>
                Edit Post
                <% end %>
                <%= button_to @post, method: :delete, data: { turbolinks: false }, class: "dropdown-item" do %>
                    <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
                    Delete Post
                <% end %>
                </a>
                </div>
            </div>
            </div>
        </div>
        <% end %>
    </article>
    <p class="mt-3"><%= @post.content %></p>
    <hr>
    <ul>
      <%= render partial: 'comments/comment', collection: @post.comments %>
    </ul>
    <article class="media">
      <figure class="media-left">
        <div class="columns is-centered is-mobile is-vcentered">
          <div class="column has-text-centered pr-3 pl-3">
            <div class="image is-32x32">
              <img src="https://bulma.io/images/placeholders/64x64.png" class="is-rounded">
            </div> 
          </div>
        </div>
      </figure>
      <div class="media-content">
        <div class="content">
          <%= render 'comments/form', collection: @post.comments %>
          <%#= link_to new_post_comment, id: "new-post-comment" %>
            <%#= text_field_tag "dummy",nil, class: "input", placeholder: "What's on your mind, #{current_user.name}?" %>
          <%# end %>
        </div>
      </div>
    </article>
  </div>
</div>