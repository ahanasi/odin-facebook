<div class="column is-6">
  <div class="box">
    <article class="media">
      <div class="media-left">
          <figure class="image is-48x48">
              <%= image_tag user_avatar(@post.user,300), class: "is-rounded" %>
          </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= @post.user.name %></strong>
          <br />
          <small class="is-size-7"><%= @post.display_datetime() %></small>
        </div>
      </div>
      <% if @post.user == current_user %>
        <div class="media-right">
          <div class="dropdown is-up">
            <div class="dropdown-trigger">
                <button class="button dropdown-button" aria-haspopup="true" aria-controls="dropdown-menu7">
                <span class="icon is-small">
                    <i class="fas fa-ellipsis-h"></i>
                </span>
                </button>
            </div>
            <div class="dropdown-menu" id="dropdown-menu7" role="menu">
              <div class="dropdown-content">
                <%= link_to edit_post_path(@post), data: { turbolinks: false }, class: "dropdown-item dropdown-button" do %>
                  <span class="icon"><i class="fas fa-pen" aria-hidden="true"></i></span>
                  Edit Post
                <% end %>
                <%= button_to @post, method: :delete, data: { turbolinks: false }, class: "dropdown-item" do %>
                    <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
                    Delete Post
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </article>
    <p class="mt-3"><%= @post.content %></p>
    <% if @post.image.attached? %>
      <figure class="image">
        <img src="<%= (url_for(@post.image)) %>" alt="Post Image">
      </figure>
    <% end %>
    <nav class="level mt-1 mb-1">
      <% if @post.likes.count != 0 %>
        <div class="level-left">
          <small class="level-item has-text-grey"><i class="far fa-thumbs-up fa-fw has-text-info-dark "></i><%= @post.likes.count %></small>
        </div>
      <% else %>
        <small>    </small>
      <% end %>
      <% unless @post.comments.count == 0 %>
        <div class="level-right">
          <small class="level-item">
            <%= link_to post_path(@post), class: "has-text-grey" do %>
              <%= @post.comments.count %>
              <% if @post.comments.count > 1 %>
                Comments
              <% else %>
                Comment
              <% end %>
            <% end %>
          </small>
        </div>
      <% end %>
    </nav>
    <hr class="m-1 has-background-grey-lighter" style="height: 1px;">
    <div class="field is-grouped mb-0">
      <% if already_liked?(@post) %>
        <% pre_like = @post.likes.find { |like| like.user_id == current_user.id} %>
        <%= link_to post_like_path(@post, pre_like), method: :delete, class: "button is-white is-fullwidth" do %>
          <span><i class="fas fa-thumbs-up has-text-info-dark"></i></span>  
          <span class="pl-2 has-text-info-dark">Like</span>
        <% end %>
      <% else %>
        <%= link_to post_likes_path(@post, Like.new), method: :post, class: "button is-white is-fullwidth" do %>
          <span><i class="far fa-thumbs-up has-text-grey-dark"></i></span>  
          <span class="pl-2 has-text-grey-dark">Like</span>
        <% end %>
      <% end %>
      <%= link_to post_path(@post), class: "button is-white is-fullwidth" do %>
        <span><i class="far fa-comment-alt has-text-grey-dark"></i></span>
        <span class="pl-2 has-text-grey-dark">Comment</span>
      <% end %>
    </div>
    <hr class="m-1 mb-2 has-background-grey-lighter" style="height: 1px;">
    <%= render partial: 'comments/comment', collection: @post.comments %>
    <article class="media">
      <figure class="media-left">
        <div class="columns is-centered is-mobile is-vcentered">
          <div class="column has-text-centered pr-3 pl-3">
            <div class="image is-32x32">
              <%= image_tag user_avatar(current_user,300), class: "is-rounded" %>
            </div> 
          </div>
        </div>
      </figure>
      <div class="media-content">
        <div class="content">
          <%= render 'comments/form', collection: @post.comments %>
        </div>
      </div>
    </article>
  </div>
</div>