<div class="column is-4 is-offset-4 box">
  <h1 class="title is-5 mt-2 mb-2">Forgot your password?</h1>
  <hr class="login-hr has-background-grey-lighter" style="height: 1px;">
  <%= form_with scope: resource_name, url: password_path(resource_name) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <div class="control">
        <%= f.email_field :email, autofocus: true, class: "input", autocomplete: "email", placeholder: "Email", required: true %>
      </div>
    </div>

    <div class="control">
        <%= f.submit "Send me reset password instructions", class: "button is-fullwidth is-info" %>
    </div>
  <% end %>
</div>