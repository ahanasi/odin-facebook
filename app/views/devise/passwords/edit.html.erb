<div class="column is-4 is-offset-4 box">
  <h1 class="title is-5 mt-2 mb-2">Change your password</h1>
  <hr class="login-hr has-background-grey-lighter" style="height: 1px;">
  <%= form_with scope: resource_name, url: password_path(resource_name), method: :put do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <div class="control">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input", placeholder: "New Password", required: true %>
        <% if @minimum_password_length %>
          <br />
          <em class="help">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "input", placeholder: "Password Confirmation", required: true %>
      </div>
    </div>

    <div class="control">
        <%= f.submit "Change my password", class: "button is-fullwidth is-info" %>
    </div>
  <% end %>
</div>